<div class="form-group row">
    <label for="settings" class="col-1 col-form-label text-right">Settings</label>
    <div class="col-5">
        <select id="settings" class="form-control" value="@Options.KafkaConfig.CurrentSetting.Name" @onchange="OnSelectSetting">
            <option value="">No registered</option>
            @foreach (var template in Options.KafkaConfig.ListKafkaSettings)
            {
                <option value=@template.Key>@template.Key</option>
            }
        </select>
    </div>
</div>

<div class="modal fade" id="saveSettingModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Configuration name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="settingName" placeholder="name" @bind="Options.KafkaConfig.CurrentSetting.Name">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="Save" disabled="@string.IsNullOrWhiteSpace(Options.KafkaConfig.CurrentSetting.Name)">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteSettingModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure to delete "@Options.KafkaConfig.CurrentSetting.Name"?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" @onclick="Delete">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
